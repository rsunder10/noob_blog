<h1>Create a new Article</h1>
<% if @article.errors.any? %>
  <h3>Following Error Occured</h3>
  <ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
  <%=f.label :title %><br/>
  <%=f.text_field :title %>
  </p>
  <p>
    <%=f.label :description %><br/>
    <%=f.text_area :description %>
  </p>
  <%=f.submit %>
<% end %>